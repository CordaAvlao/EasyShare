<Window x:Class="EasyShare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyShare"
        mc:Ignorable="d"
        Title="EasyShare - Partage Simplifié" Height="500" Width="800"
        Background="#121212" Foreground="White" WindowStyle="None" AllowsTransparency="True" WindowStartupLocation="CenterScreen">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>
    <Border BorderBrush="#333" BorderThickness="1" CornerRadius="10" Background="#1E1E1E">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="120"/>
            </Grid.RowDefinitions>

            <!-- Custom Title Bar -->
            <Grid Grid.Row="0" Background="#252525">
                <TextBlock Text="EasyShare Pro" VerticalAlignment="Center" Margin="20,0,0,0" FontWeight="Bold" FontSize="16" Foreground="#00CCFF"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="−" Width="40" Background="Transparent" BorderThickness="0" Foreground="White" Click="Minimize_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    <Button Content="✕" Width="40" Background="Transparent" BorderThickness="0" Foreground="White" Click="Close_Click" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </StackPanel>
            </Grid>

            <!-- Main Content with Tabs -->
            <TabControl Grid.Row="1" Background="Transparent" BorderThickness="0" Margin="10">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Border Name="Border" Margin="0,0,10,0" Padding="15,5" Background="#2A2A2A" CornerRadius="5">
                                        <ContentPresenter x:Name="ContentSite" ContentSource="Header" RecognizesAccessKey="True"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="#00CCFF"/>
                                            <Setter Property="Foreground" Value="Black"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="False">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- TAB 1: PARTAGE -->
                <TabItem Header="PARTAGE">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Credentials -->
                        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <StackPanel Margin="0,0,20,0">
                                <TextBlock Text="Utilisateur" Opacity="0.6" FontSize="11" Margin="5,0,0,2"/>
                                <TextBox x:Name="UserField" Text="Bob" Width="150" Height="25" Background="#2A2A2A" Foreground="White" BorderBrush="#444" Padding="5,2"/>
                            </StackPanel>
                            <StackPanel>
                                <TextBlock Text="Mot de Passe" Opacity="0.6" FontSize="11" Margin="5,0,0,2"/>
                                <TextBox x:Name="PassField" Text="Test123" Width="150" Height="25" Background="#2A2A2A" Foreground="White" BorderBrush="#444" Padding="5,2"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Options -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="Partage Rapide" Foreground="#00CCFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Génère C:\PartageTemp" Opacity="0.6" FontSize="11" Margin="0,0,0,10"/>
                                <Button Content="Activer PartageTemp" Height="40" Background="#00CCFF" Foreground="Black" FontWeight="Bold" Click="ShareTemp_Click">
                                    <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="20"/></Style></Button.Resources>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <TextBlock Text="Partage Manuel" Foreground="#00CCFF" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock Text="Choisir un dossier" Opacity="0.6" FontSize="11" Margin="0,0,0,10"/>
                                <Button Content="Parcourir..." Height="40" BorderBrush="#00CCFF" BorderThickness="2" Background="Transparent" Foreground="#00CCFF" FontWeight="Bold" Click="BrowseShare_Click">
                                    <Button.Resources><Style TargetType="Border"><Setter Property="CornerRadius" Value="20"/></Style></Button.Resources>
                                </Button>
                            </StackPanel>
                        </Grid>

                        <CheckBox x:Name="HiddenCheck" Grid.Row="2" Content="Partage caché (ajoute $ à la fin)" Foreground="White" VerticalAlignment="Center" Margin="0,10,0,0" IsChecked="False"/>
                    </Grid>
                </TabItem>

                <!-- TAB 2: NETTOYAGE -->
                <TabItem Header="NETTOYAGE" Selector.Selected="CleanupTab_Selected">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Border Grid.Row="0" Background="#181818" CornerRadius="5" BorderBrush="#333" BorderThickness="1">
                            <ScrollViewer>
                                <StackPanel x:Name="ResourceList" Margin="10"/>
                            </ScrollViewer>
                        </Border>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                            <Button Content="Rafraîchir" Width="100" Height="30" Margin="0,0,10,0" Background="#2A2A2A" Foreground="White" Click="RefreshResources_Click"/>
                            <Button Content="Supprimer Sélection" Width="150" Height="30" Background="#FF4444" Foreground="White" FontWeight="Bold" Click="SelectiveCleanup_Click"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <!-- TAB 3: À PROPOS -->
                <TabItem Header="À PROPOS">
                    <Grid Margin="20">
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                            <TextBlock Text="EasyShare Pro" FontSize="24" FontWeight="Bold" Foreground="#00CCFF" HorizontalAlignment="Center"/>
                            <TextBlock Text="Version 2.0" Opacity="0.7" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            <TextBlock Text="Date : 08 Janvier 2026" Opacity="0.7" HorizontalAlignment="Center" Margin="0,2,0,20"/>

                            <Border Background="#2A2A2A" CornerRadius="10" Padding="20">
                                <StackPanel>
                                    <TextBlock Text="Développé par :" Opacity="0.6" HorizontalAlignment="Center"/>
                                    <TextBlock HorizontalAlignment="Center" Margin="0,5,0,0">
                                        <Hyperlink NavigateUri="https://github.com/CordaAvlao" RequestNavigate="Hyperlink_RequestNavigate" Foreground="#00CCFF">
                                            github.com/CordaAvlao
                                        </Hyperlink>
                                    </TextBlock>
                                </StackPanel>
                            </Border>

                            <TextBlock Text="Utilitaire portable de partage réseau simplifié." 
                                       FontStyle="Italic" Opacity="0.5" TextWrapping="Wrap" 
                                       TextAlignment="Center" Margin="0,20,0,0" FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </TabItem>
            </TabControl>

            <!-- Status Logs Area (Persistent) -->
            <Border Grid.Row="2" Background="#181818" Margin="0,10,0,0" CornerRadius="0,0,10,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="StatusLog" Margin="20,10" Background="Transparent" Foreground="#AAA" BorderThickness="0"
                             IsReadOnly="True" TextWrapping="Wrap" FontFamily="Consolas" FontSize="11"
                             VerticalScrollBarVisibility="Auto" Text="Prêt à l'emploi..."/>
                    <Button Grid.Column="1" Content="Nettoyage Complet" Width="150" Margin="10" Background="#FF4444" Foreground="White" FontWeight="Bold" Click="Cleanup_Click" Height="40" VerticalAlignment="Center"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
